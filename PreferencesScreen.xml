<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/
                   ..\..\FrameXML\UI.xsd">

    <Frame name="PreferencesScreen" parent="UIParent" inherits="BasicFrameTemplate" hidden="true">
        <Size x="234" y="300"/>
        <Anchors>
            <Anchor point="CENTER"/>
        </Anchors>

        <Layers>
            <Layer level="OVERLAY">
                <FontString text="Preferences" font="GameFontHighLight">
                    <Anchors>
                        <Anchor point="TOPLEFT" x="8" y="-6"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>

        <Frames>
            <Button name="$parentButton" inherits="UIPanelButtonTemplate" text="Save">
                <Size x="128" y="21"/>
                <Anchors>
                    <Anchor point="BOTTOM" x="0" y="16"/>
                </Anchors>
            </Button>
        </Frames>
    </Frame>
</Ui>
